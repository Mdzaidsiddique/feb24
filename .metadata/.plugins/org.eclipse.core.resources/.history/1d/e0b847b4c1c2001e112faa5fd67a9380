package com.revise;

public class Polymorphism {
	
//	Static Polymorphism Example:
	void sp(byte b){ 
		System.out.println("inside sp(byte) of class polymorphism (500 line code)");
		//500 line of code		
	 }

	void sp(int i){ 
		System.out.println("inside sp(int) of class polymorphism (1000 line code)");
		//10000 line of code	
	 }
	
//	Dynamic Polymorphism Example:

	void dp(int a) {
		System.out.println("dp a");
	}
	void dp(int a) {
		System.out.println("dp b");
	}
	public static void main(String[] args){
//		Static Polymorphism Example:
		Polymorphism p1=new Polymorphism();
		byte x=20;
		p1.sp(x);  // it will give the priority to the nearest one.
	
//		Dynamic Polymorphism Example:
		int a = 10;
		p1.dp(a);
		
	}
}
